{
  "compilerOptions": {
    
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",             // ⬅️ CHANGED
    "moduleResolution": "node",       // ⬅️ CHANGED
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      { "name": "next" }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["server.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/utils/userContext.js", "app/(chat)/layoudt.tsx", "app/utils/getUserImageURL.js", "app/utils/roomUtil.ts", "app/utils/apiClient.js"],
  "exclude": ["node_modules"]
}
